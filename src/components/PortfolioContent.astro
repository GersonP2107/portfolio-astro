---
const portfolioItems = [
  {
    title: "E-Commerce Platform",
    subtitle: "React + Node.js",
    image: "/project1.jpg",
    category: "Web development",
    techs: ["React", "Node.js", "MongoDB"],
  },
  {
    title: "Task Management App",
    subtitle: "Vue.js + Express",
    image: "/project2.jpg",
    category: "Web development",
    techs: ["Vue.js", "Express", "PostgreSQL"],
  },
  {
    title: "Portfolio Website",
    subtitle: "Astro + Tailwind",
    image: "/project3.jpg",
    category: "Web development",
    techs: ["Astro", "Tailwind", "TypeScript"],
  },
];
---

<!-- Portfolio Section -->
<section
  id="portfolio"
  class="p-8 bg-gradient-to-r from-gray-800/20 via-gray-700/10 to-gray-800/20 backdrop-blur-xl border-y border-gray-700/30"
>
  <div class="max-w-7xl">
    <div class="mb-12">
      <h2
        class="text-4xl font-bold mb-6 text-white bg-gradient-to-r from-white via-amber-400 to-orange-500 bg-clip-text animate-slide-in-right"
      >
        Portfolio
      </h2>
      <div class="border-b border-gray-700/50 mb-8">
        <div
          class="flex space-x-8 animate-fade-in-up"
          style="animation-delay: 0.3s"
        >
          <button
            class="pb-4 border-b-3 border-amber-500 text-amber-400 font-semibold transition-all duration-300 hover:scale-110 relative group"
          >
            Todos
            <span
              class="absolute inset-0 bg-amber-400/10 rounded-t-xl transform scale-0 group-hover:scale-100 transition-transform duration-300"
            ></span>
          </button>
          <button
            class="pb-4 text-gray-400 hover:text-white font-medium transition-all duration-300 hover:scale-110 relative group"
          >
            Web Design
            <span
              class="absolute bottom-0 left-0 w-0 h-0.5 bg-amber-400 group-hover:w-full transition-all duration-300"
            ></span>
          </button>
          <button
            class="pb-4 text-gray-400 hover:text-white font-medium transition-all duration-300 hover:scale-110 relative group"
          >
            Aplicaciones
            <span
              class="absolute bottom-0 left-0 w-0 h-0.5 bg-amber-400 group-hover:w-full transition-all duration-300"
            ></span>
          </button>
          <button
            class="pb-4 text-gray-400 hover:text-white font-medium transition-all duration-300 hover:scale-110 relative group"
          >
            Desarrollo Web
            <span
              class="absolute bottom-0 left-0 w-0 h-0.5 bg-amber-400 group-hover:w-full transition-all duration-300"
            ></span>
          </button>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        portfolioItems.map((item, index) => (
          <div
            class="group bg-gradient-to-br from-gray-800/60 via-gray-700/40 to-gray-800/60 backdrop-blur-xl rounded-3xl overflow-hidden hover:transform hover:scale-110 hover:rotate-1 transition-all duration-500 shadow-2xl hover:shadow-3xl border border-gray-600/30 hover:border-amber-400/50 animate-zoom-in"
            style={`animation-delay: ${0.5 + index * 0.1}s`}
          >
            <div class="aspect-video bg-gradient-to-br from-gray-700 via-gray-600 to-gray-800 relative overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-125 transition-transform duration-700"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
              />
              <div class="w-full h-full bg-gradient-to-br from-amber-400/30 via-yellow-500/20 to-orange-500/30 items-center justify-center text-6xl font-bold text-white hidden">
                {item.title[0]}
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500" />
              <div class="absolute top-4 right-4 w-10 h-10 bg-amber-400/20 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform scale-0 group-hover:scale-100 transition-all duration-300">
                <svg
                  class="w-5 h-5 text-amber-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
              </div>
            </div>
            <div class="p-8">
              <h3 class="font-bold text-xl text-white mb-3 group-hover:text-amber-400 transition-colors duration-300">
                {item.title}
              </h3>
              <p class="text-gray-400 text-sm mb-6 group-hover:text-gray-300 transition-colors duration-300">
                {item.subtitle}
              </p>
              <div class="flex flex-wrap gap-3">
                {item.techs.map((tech, techIndex) => (
                  <span
                    class="px-4 py-2 bg-gradient-to-r from-amber-500/20 to-orange-500/20 text-amber-400 text-xs font-medium rounded-full border border-amber-400/30 hover:border-amber-400/60 hover:scale-110 transition-all duration-300 backdrop-blur-sm"
                    style={`animation-delay: ${0.8 + techIndex * 0.1}s`}
                  >
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
