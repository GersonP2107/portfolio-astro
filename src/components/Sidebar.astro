---
import Cart from "./icons/Cart.astro";
import Phone from "./icons/Phone.astro";
import Instagram from "./icons/Instagram.astro";

// Puedes cambiar esta información por la tuya
const personalInfo = {
  name: "Gerson Pereira",
  title: "Desarrollador Full Stack",
  email: "contacto@pereiradev.com",
  phone: "+57 323 6128822",
  birthday: "Enero 21, 2005",
  avatar: "/me.png", // Agrega tu foto en la carpeta public
};
---

<aside
  class="fixed left-0 top-0 h-screen w-80 bg-gradient-to-b from-[#1a1b1d] via-[#1e1f21] to-[#1a1b1d] backdrop-blur-xl border-r border-gray-700/30 flex flex-col shadow-2xl animate-slide-in"
>
  <!-- Header con foto y nombre -->
  <div
    class="p-6 text-center border-b border-gray-700/30 bg-gradient-to-b from-transparent to-gray-800/20"
  >
    <div
      class="w-[280px] h-[280px] mx-auto mb-6 rounded-3xl overflow-hidden bg-gradient-to-br from-gray-700 via-gray-600 to-gray-800 shadow-2xl ring-4 ring-amber-400/20 hover:ring-amber-400/40 transition-all duration-500 hover:scale-105 animate-float"
    >
      <img
        src={personalInfo.avatar}
        alt={personalInfo.name}
        class="w-full h-full object-cover rounded-3xl hover:scale-110 transition-transform duration-700"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
      />
      <div
        class="w-full h-full bg-gradient-to-br from-amber-400 via-yellow-500 to-orange-500 items-center justify-center text-3xl font-bold text-gray-900 hidden rounded-3xl"
      >
        {
          personalInfo.name
            .split(" ")
            .map((n) => n[0])
            .join("")
        }
      </div>
    </div>
    <h1 class="text-2xl font-bold mb-2 text-white animate-fade-in-up">
      {personalInfo.name}
    </h1>
    <p
      class="text-gray-400 text-base font-medium animate-fade-in-up"
      style="animation-delay: 0.2s"
    >
      {personalInfo.title}
    </p>
  </div>

  <!-- Información de contacto -->
  <div class="flex-1 p-6 space-y-6">
    <div class="space-y-5">
      <div
        class="flex items-center space-x-4 p-4 rounded-2xl bg-gradient-to-r from-gray-800/50 to-gray-700/30 hover:from-gray-700/60 hover:to-gray-600/40 transition-all duration-300 hover:scale-105 hover:shadow-xl backdrop-blur-sm border border-gray-600/20 hover:border-amber-400/30 animate-slide-in-left"
      >
        <div
          class="w-12 h-12 bg-gradient-to-br from-amber-400 via-yellow-500 to-orange-500 rounded-2xl flex items-center justify-center shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-110 hover:rotate-3"
        >
          <Cart />
        </div>
        <div>
          <p
            class="text-xs text-gray-500 uppercase tracking-wider font-semibold"
          >
            Email
          </p>
          <p class="text-sm text-gray-200 font-medium">{personalInfo.email}</p>
        </div>
      </div>

      <div
        class="flex items-center space-x-4 p-4 rounded-2xl bg-gradient-to-r from-gray-800/50 to-gray-700/30 hover:from-gray-700/60 hover:to-gray-600/40 transition-all duration-300 hover:scale-105 hover:shadow-xl backdrop-blur-sm border border-gray-600/20 hover:border-amber-400/30 animate-slide-in-left"
        style="animation-delay: 0.1s"
      >
        <div
          class="w-12 h-12 bg-gradient-to-br from-amber-400 via-yellow-500 to-orange-500 rounded-2xl flex items-center justify-center shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-110 hover:rotate-3"
        >
          <Phone />
        </div>
        <div>
          <p
            class="text-xs text-gray-500 uppercase tracking-wider font-semibold"
          >
            Phone
          </p>
          <p class="text-sm text-gray-200 font-medium">{personalInfo.phone}</p>
        </div>
      </div>
    </div>

    <!-- Redes sociales -->
    <div class="pt-6 border-t border-gray-700/30">
      <div class="flex justify-center space-x-4">
        <a
          href="#"
          class="w-12 h-12 bg-gradient-to-br from-gray-800 to-gray-700 hover:from-amber-500 hover:to-orange-500 rounded-2xl flex items-center justify-center transition-all duration-300 hover:scale-125 hover:rotate-12 hover:shadow-xl group animate-bounce-in"
        >
          <Instagram
            class="w-5 h-5 group-hover:scale-110 transition-transform duration-300"
          />
        </a>
        <a
          href="#"
          class="w-12 h-12 bg-gradient-to-br from-gray-800 to-gray-700 hover:from-blue-500 hover:to-blue-600 rounded-2xl flex items-center justify-center transition-all duration-300 hover:scale-125 hover:rotate-12 hover:shadow-xl group animate-bounce-in"
          style="animation-delay: 0.1s"
        >
          <svg
            class="w-5 h-5 group-hover:scale-110 transition-transform duration-300"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="w-12 h-12 bg-gradient-to-br from-gray-800 to-gray-700 hover:from-purple-500 hover:to-purple-600 rounded-2xl flex items-center justify-center transition-all duration-300 hover:scale-125 hover:rotate-12 hover:shadow-xl group animate-bounce-in"
          style="animation-delay: 0.2s"
        >
          <svg
            class="w-5 h-5 group-hover:scale-110 transition-transform duration-300"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</aside>

<style>
  @keyframes slide-in {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slide-in-left {
    from {
      transform: translateX(-30px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes fade-in-up {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes bounce-in {
    0% {
      transform: scale(0) rotate(0deg);
      opacity: 0;
    }
    50% {
      transform: scale(1.2) rotate(180deg);
    }
    100% {
      transform: scale(1) rotate(360deg);
      opacity: 1;
    }
  }

  .animate-slide-in {
    animation: slide-in 0.8s ease-out;
  }

  .animate-slide-in-left {
    animation: slide-in-left 0.6s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-bounce-in {
    animation: bounce-in 0.8s ease-out;
  }
</style>
