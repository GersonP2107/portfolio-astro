---
export interface Props {
  title?: string;
}

const { title = "Portfolio - Gerson" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/me.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    
    <!-- View Transitions API para transiciones fluidas -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body class="bg-[#1a1b1d] text-white antialiased">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      sans-serif;
  }
  
  /* Transiciones de página fluidas */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  /* Aplicar animación a toda la página */
  body {
    animation: fadeIn 0.6s ease-out;
  }
  
  /* Transiciones suaves para enlaces */
  a {
    transition: all 0.3s ease;
  }
  
  /* Scroll suave */
  * {
    scroll-behavior: smooth;
  }
</style>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
  
  /* Mejoras de rendimiento */
  * {
    box-sizing: border-box;
  }
  
  /* Optimización para animaciones */
  .animate-fade-in,
  .animate-slide-in-right,
  .animate-slide-in-left,
  .animate-zoom-in {
    will-change: transform, opacity;
  }
</style>

<script>
  // Transiciones de página más fluidas con JavaScript
  document.addEventListener('DOMContentLoaded', () => {
    // Precargar páginas para navegación más rápida
    const links = document.querySelectorAll('a[href^="/"]');
    links.forEach(link => {
      link.addEventListener('mouseenter', () => {
        const href = link.getAttribute('href');
        if (href) {
          const linkElement = document.createElement('link');
          linkElement.rel = 'prefetch';
          linkElement.href = href;
          document.head.appendChild(linkElement);
        }
      });
    });
    
    // Animación de carga suave
    document.body.style.opacity = '0';
    document.body.style.transform = 'translateY(20px)';
    
    setTimeout(() => {
      document.body.style.transition = 'all 0.6s ease-out';
      document.body.style.opacity = '1';
      document.body.style.transform = 'translateY(0)';
    }, 100);
  });
</script>
